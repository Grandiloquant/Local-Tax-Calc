<!DOCTYPE html>
<html>
<head>
  <title>Use Tax Calculator</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    #calculator {
      width: 300px;
      margin: 0 auto;
      padding: 20px;
      border: 1px solid #ccc;
    }
    label {
      display: block;
      margin-bottom: 10px;
    }
    input[type="number"] {
      width: 100%;
      padding: 5px;
      box-sizing: border-box;
    }
    #result {
      font-weight: bold;
      margin-top: 10px;
    }
  </style>
</head>
<body>
  <div id="calculator">
    <h2>Use Tax Calculator</h2>
    <label for="purchasedValue">Total Purchased Value:</label>
    <input type="number" id="purchasedValue" placeholder="Enter the total purchased value">
    
    <label for="useTaxRate">Use Tax Rate:</label>
    <input type="number" id="useTaxRate" placeholder="Enter the use tax rate (%)">
    
    <button onclick="calculateUseTax()">Calculate</button>
    
    <div id="result"></div>
  </div>

  <script>
    function calculateUseTax() {
      const purchasedValue = parseFloat(document.getElementById("purchasedValue").value);
      const useTaxRate = parseFloat(document.getElementById("useTaxRate").value);

      if (isNaN(purchasedValue) || isNaN(useTaxRate)) {
        alert("Please enter valid numbers for total purchased value and use tax rate.");
        return;
      }

      const useTax = purchasedValue * (useTaxRate / 100);
      
      document.getElementById("result").textContent = `Your use tax is: $${useTax.toFixed(2)}`;
    }
  </script>
</body>
</html>
